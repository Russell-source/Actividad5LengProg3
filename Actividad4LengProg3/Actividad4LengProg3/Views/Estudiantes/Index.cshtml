@model Actividad4LengProg3.Models.EstudianteViewModel
<h2>Registro de Estudiantes</h2>

<form asp-action="Registrar" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <label asp-for="NombreCompleto"></label>
    <input asp-for="NombreCompleto" class="form-control" />
    <span asp-validation-for="NombreCompleto" class="text-danger"></span>

    <label asp-for="Matricula"></label>
    <input asp-for="Matricula" class="form-control" />
    <span asp-validation-for="Matricula" class="text-danger"></span>

    <label asp-for="Carrera"></label>
    <input asp-for="Carrera" class="form-control" />
    <span asp-validation-for="Carrera" class="text-danger"></span>

    <label asp-for="Recinto"></label>
    <input asp-for="Recinto" class="form-control" />
    <span asp-validation-for="Recinto" class="text-danger"></span>

    <label asp-for="CorreoInstitucional"></label>
    <input asp-for="CorreoInstitucional" class="form-control" />
    <span asp-validation-for="CorreoInstitucional" class="text-danger"></span>

    <label asp-for="Celular"></label>
    <input asp-for="Celular" class="form-control" />
    <span asp-validation-for="Celular" class="text-danger"></span>

    <label asp-for="Telefono"></label>
    <input asp-for="Telefono" class="form-control" />
    <span asp-validation-for="Telefono" class="text-danger"></span>

    <label asp-for="Direccion"></label>
    <input asp-for="Direccion" class="form-control" />
    <span asp-validation-for="Direccion" class="text-danger"></span>

    <label asp-for="FechaNacimiento"></label>
    <input asp-for="FechaNacimiento" type="date" class="form-control" />
    <span asp-validation-for="FechaNacimiento" class="text-danger"></span>

    <label asp-for="Genero"></label>
    <select asp-for="Genero" class="form-control">
        <option value="">Seleccione</option>
        <option>Masculino</option>
        <option>Femenino</option>
    </select>

    <label asp-for="Turno"></label>
    <select asp-for="Turno" class="form-control">
        <option value="">Seleccione</option>
        <option>Mañana</option>
        <option>Tarde</option>
        <option>Noche</option>
    </select>

    <label asp-for="EstaBecado"></label>
    <input asp-for="EstaBecado" type="checkbox" />

    <label asp-for="PorcentajeBeca"></label>
    <input asp-for="PorcentajeBeca" class="form-control" />
    <span asp-validation-for="PorcentajeBeca" class="text-danger"></span>

    <button type="submit" class="btn btn-primary mt-3">Registrar</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
